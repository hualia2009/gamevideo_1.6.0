<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgbitmap" >
    <RelativeLayout
        android:id="@+id/local_item_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip" >
        <ImageView
            android:id="@+id/local_default_img"
            android:layout_width="80dip"
            android:layout_height="65dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4.0dip"
            android:focusable="true"
            android:maxWidth="80dip"
            android:src="@drawable/default_thumbnail" />
        <TextView
            android:id="@+id/local_video_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/local_default_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/local_default_img"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="14dip" />
        <TextView
            android:id="@+id/local_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/local_default_img"
            android:layout_alignParentBottom="true"
            android:text="@string/app_name"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/local_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/preload_delete_bg" />
         <Button
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25.0dip"
            android:background="@drawable/play"
            android:tag="播放" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/imgDivider"
        android:layout_width="fill_parent"
        android:layout_height="3.0px"
        android:layout_below="@id/local_item_rl"
        android:layout_marginTop="5.0dip"
        android:background="@drawable/list_divider_line" />
</RelativeLayout>